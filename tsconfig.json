{
    "compilerOptions": {
      "target": "ES2020",  // or a more recent version
      "module": "CommonJS", // Ensure you are using CommonJS
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }
  